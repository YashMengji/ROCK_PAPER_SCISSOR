<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/CardView.Dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:animationCache="true"
    android:contextClickable="false"
    android:textAlignment="center"
    tools:context=".MainActivity"
    android:background="@drawable/yash" >

    <Button
        android:id="@+id/startButton"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="172dp"
        android:layout_height="69dp"
        android:alpha="0"
        android:onClick="startGame"
        android:scrollbarStyle="insideOverlay"
        android:text="START"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.443" />

    <TextView
        android:id="@+id/titleText"
        style="@android:style/Widget.Holo.TextView.SpinnerItem"
        android:layout_width="368dp"
        android:layout_height="51dp"
        android:fontFamily="serif"
        android:text="ROCK PAPER SCISSOR"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#CCCAD0"
        android:textSize="24sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.249" />

    <ImageButton
        android:id="@+id/instruction"
        android:layout_width="65dp"
        android:layout_height="53dp"
        android:onClick="instruction"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021"
        app:srcCompat="@drawable/ic_action_name" />

    <Button
        android:id="@+id/quitButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="114dp"
        android:layout_height="50dp"
        android:alpha="0"
        android:text="QUIT"
        android:onClick="exitApp"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.741" />

    <Button
        android:id="@+id/creditButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="125dp"
        android:layout_height="45dp"
        android:alpha="0"
        android:textSize="34sp"
        android:onClick="showCredit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.643" />

    <Button
        android:id="@+id/settingButton"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="186dp"
        android:layout_height="43dp"
        android:alpha="0"
        android:onClick="setting"
        android:text="setting"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.607"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

</androidx.constraintlayout.widget.ConstraintLayout>